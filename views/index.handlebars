<h1>Tasty Burgers</h1>

<div class="columns">
  <div class="column">
    <h2>Burgers devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="column">
    <h2>Burgers that have not been eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="container" style="margin-left: 5px;">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devoured">Have you eaten this?</label><br>
      <input type="radio" name="devoured" value="0" checked> Devoured!<br>
      <input type="radio" name="devoured" value="1"> Not Eaten
    </div>

    <button class="button is-danger"type="submit">Add Burger</button>
  </form>
</div>